<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3" style="margin:70px auto;">
            <% if(currentUser){ %>
            <div class="thumbnail">
                <form action="/sights/<%=sight._id%>/contact" method="POST">
